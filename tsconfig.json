{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "tests", "dist"],
  "include": ["./src/**/*"]
}
